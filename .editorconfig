root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
max_line_length = 100

[*.txt]
trim_trailing_whitespace = false

[*.py]
indent_style = space
indent_size = 4

[*.java]
indent_style = space
indent_size = 4
tab_width = 8
max_line_length = 120

[*.groovy]
indent_style = space
indent_size = 4
tab_width = 8
max_line_length = 120

[*.gradle]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 4
tab_width = 8

[*.{h,hpp,c,cpp}]
indent_style = space
indent_size = 2
max_line_length = 80

[*.scala]
indent_style = space
indent_size = 2

[*.rs]
indent_style = space
indent_size = 4
max_line_length = 99

[*.hs]
indent_style = space
indent_size = 4
max_line_length = 80
