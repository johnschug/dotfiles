root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,txt}]
max_line_length = 100

[*.py]
indent_style = space
indent_size = 4
max_line_length = 79

[*.{java,groovy,gradle,kt}]
indent_style = space
indent_size = 4
max_line_length = 120

[*.js]
indent_style = space
indent_size = 4

[*.{h,hpp,c,cpp}]
indent_style = space
indent_size = 2
max_line_length = 80

[*.scala]
indent_style = space
indent_size = 2
max_line_length = 120

[*.rs]
indent_style = space
indent_size = 4
max_line_length = 99

[*.hs]
indent_style = space
indent_size = 4
max_line_length = 80
