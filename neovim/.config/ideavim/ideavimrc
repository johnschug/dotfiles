set commentary
set ideajoin
set ideastatusicon=gray
set ignorecase
set incsearch
set matchpairs+=<:>,[:]
set number
set relativenumber
set scrolloff=5
set showmode
set sidescroll=1
set sidescrolloff=10
set smartcase
set surround
set wrapscan

let mapleader=" "

nnoremap [b :prev<CR>
nnoremap ]b :next<CR>
nnoremap [B :first<CR>
nnoremap ]B :last<CR>
nmap [g <Action>(GotoPreviousError)
nmap ]g <Action>(GotoNextError)
nmap <Leader>f <Action>(GotoFile)

nnoremap gb :b#<CR>
nnoremap <Leader>c :bd<CR>
nnoremap <Leader>w :w<CR>
nnoremap <Leader>sv :source ~/.ideavimrc<CR>
nnoremap <Leader>ev :vsplit ~/.ideavimrc<CR>

nmap gd <Action>(GotoDeclaration)

vnoremap ae gg0oG$
