[alias]
	aliases = config --get-regexp alias
	amend = commit --amend -C HEAD
	assume = update-index --assume-unchanged --
	assumed = !git ls-files -v | grep ^h | cut -c 3-
	br = branch -av
	clog = log --pretty=compact
	compact-log = log --pretty=compact
	dump = cat-file -p
	ignore = !echo "$1" >>.gitignore
	pushf = push --force-with-lease
	st = status
	tlog = log --pretty=compact --graph
	tree-log = log --pretty=compact --graph
	type = cat-file -t
	unassume = update-index --no-assume-unchanged --
[color]
	ui = auto
[commit]
	template = ~/.config/git/commit-template
[core]
	autocrlf = input
	untrackedCache = true
[diff]
	algorithm = histogram
	compactionHeuristic = true
	mnemonicPrefix = true
	renames = copies
	tool = vimdiff
[difftool]
	prompt = false
[fetch]
	prune = true
[gpg]
	program = gpg2
[include]
	path = ~/.config/git/local.conf
[log]
	decorate = auto
	follow = true
	mailmap = true
	date = auto:human-local
[merge]
	tool = vimdiff
[mergetool]
	prompt = false
[pretty]
	compact = format:%C(auto)%h -%d %s %Cgreen(%cr) %C(bold blue)<%aN>%Creset
[pull]
	ff = only
[push]
	default = upstream
	followTags = true
	recurseSubmodules = on-demand
[rebase]
	autoStash = true
[status]
	short = true
[submodule]
	fetchJobs = 8
[url "https://gist.github.com/"]
	insteadOf = gist:
[url "https://github.com/"]
	insteadOf = gh:
[url "git@github.com:"]
	pushInsteadOf = gh:
	pushInsteadOf = git://github.com/
	pushInsteadOf = https://github.com/
[url "https://bitbucket.org/"]
	insteadOf = bb:
[url "git@bitbucket.org:"]
	pushInsteadOf = bb:
	pushInsteadOf = git://bitbucket.org/
	pushInsteadOf = https://bitbucket.org/
[url "https://anongit.kde.org/"]
	insteadOf = kde:
[url "git@git.kde.org:"]
	pushInsteadOf = kde:
	pushInsteadOf = https://anongit.kde.org/
