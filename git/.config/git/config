[core]
	excludesfile = ~/.config/git/ignore
	autocrlf = input
[color]
	ui = auto
[diff]
	algorithm = histogram
	compactionHeuristic = true
	renames = copies
	tool = vimdiff
	mnemonicPrefix = true
[merge]
	tool = vimdiff
[submodule]
	fetchJobs = 8
[difftool]
	prompt = false
[mergetool]
	prompt = false
[rebase]
	autoStash = true
[fetch]
	prune = true
[pull]
	ff = only
[push]
	default = upstream
[log]
	mailmap = true
	decorate = auto
	follow = true
[status]
	short = true
[commit]
	template = ~/.config/git/commit-template
[gpg]
	program = gpg2
